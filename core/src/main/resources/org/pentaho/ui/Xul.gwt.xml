<?xml version="1.0" encoding="UTF-8"?>
<module>

  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>
  <inherits name='com.googlecode.gwtx.Java'/>
  <!-- import xul source, excluding anything that isn't part of the pentaho-xul API -->
  <source path="xul">
    <include name="*.java"/>
    <include name="**/components/*"/>
    <include name="**/containers/*"/>
    <include name="**/binding/Binding.java"/>
    <include name="**/binding/InlineBindingExpression.java"/>
    <include name="**/binding/BindingException.java"/>
    <include name="**/binding/BindingExceptionHandler.java"/>
    <include name="**/binding/BindingConvertor.java"/>
    <include name="**/binding/BindingContext.java"/>
    <include name="**/binding/BindingFactory.java"/>
    <include name="**/binding/BindingProvider.java"/>
    <include name="**/binding/FactoryBasedBindingProvider.java"/>
    <include name="**/dom/*"/>
    <include name="**/dnd/*"/>
    <exclude name="**/dom/DocumentFactory*"/>
    <include name="**/impl/XulEventHandler*"/>
    <include name="**/impl/AbstractXulEventHandler*"/>
    <include name="**/impl/DefaultXulOverlay*"/>
    <include name="**/util/ColumnType*"/>
    <include name="**/util/Orient*"/>
    <include name="**/util/Align*"/>
    <include name="**/util/TextType*"/>
    <include name="**/util/TreeCell*"/>
    <include name="**/util/XulDialogCallback*"/>
    <include name="**/util/AbstractXulDialogController*"/>
    <include name="**/util/AbstractModelList*"/>
    <include name="**/util/AbstractModelNode*"/>
    <include name="**/util/DialogController*"/>
  </source>

</module>