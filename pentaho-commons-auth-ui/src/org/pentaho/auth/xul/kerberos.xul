<overlay>
    <hbox id="overlay_real_estate" flex="1">

        <groupbox id="general-settings-box" flex="1">
            <grid id="method_grid" flex="1">
                <columns>
                    <column/>
                    <column flex="1"/>
                    <column/>
                </columns>
                <rows>
                    <row>
                        <label value="Username"/>
                        <textbox flex="1" id="principle"/>
                        <spacer/>
                    </row>
                    <row>
                        <label value="Password"/>
                        <textbox flex="1" id="password" type="password"/>
                        <spacer/>
                    </row>
                    <row>
                        <label value="Use Keytab"/>
                        <checkbox id="use_keytab" />
                        <spacer/>
                    </row>
                    <row>
                        <label value="Keytab"/>
                        <textbox flex="1" id="keytab"/>
                        <button id="browse" label="..." />
                    </row>
                </rows>
            </grid>
        </groupbox>

    </hbox>
</overlay>
