<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        xmlns:pen="http://www.pentaho.org/2008/xul"
        resizable="true"
        buttonlabelcancel="Cancel"
        buttonlabelaccept="OK"
        buttons="accept,cancel"
        id="main_dialog"
        width="700"
        height="300"
        buttonalign="right"
        title="Authorization Provider Manager"
        ondialogaccept="handler.onAccept()"
        ondialogcancel="handler.onCancel()"
        >

    <hbox flex="1" id="outer_container">
        <vbox flex="1">

            <hbox>
                <spacer flex="1"/>
                <button id="add_button" image="org/pentaho/auth/resources/Add.png" onclick="handler.addNew()"/>
                <button id="remove_button" image="org/pentaho/auth/resources/Remove.png" onclick="handler.remove()"/>
            </hbox>

            <listbox flex="2" id="auth_list"  disabled="false" seltype="single" pen:binding="name">
            </listbox>

        </vbox>

        <vbox flex="4">
            <grid id="method_grid">
                <columns>
                    <column/>
                    <column flex="1"/>
                </columns>
                <rows>
                    <row>
                        <label value="Name"/>
                        <textbox flex="1" id="name"/>
                    </row>
                    <row>
                        <label value="Method"/>

                        <menulist label="method" id="method_list">
                            <menupopup>
                            </menupopup>
                        </menulist>
                    </row>
                </rows>
            </grid>

            <hbox id="overlay_real_estate" flex="1">
            </hbox>
        </vbox>

    </hbox>

</dialog>
